<style>
    
.btn-outline-danger {
  /*background-color: rgba(255, 77, 14, 1);*/
  border: 1px solid rgba(255, 77, 14, 1);
  color: rgba(255, 77, 14, 1);
}
.btn-outline-danger:hover {
    background-color: rgba(255, 77, 14, 0.5);
    border: 1px solid rgba(255, 77, 14, 0.4);
}
.btn-outline-danger:focus {
    background-color: rgba(255, 77, 14, 0.5);
    border: 1px solid rgba(255, 77, 14, 0.4);
