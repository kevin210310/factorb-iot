<div class="background-login">
    <div class="background-login__contenido shadow">
        <div class="background-login__contenido__form">
            <img src="/images/favicon.png" alt="Logo FactorB IoT" class="mb-5 mx-auto d-block">
            <form class="shadow text-light" style="min-width: 20em;">
                <div class="form-group mb-3">
                    <label for="email-login mb-2">Correo Electrónico: </label>
                    <input type="email" class="form-control" id="email-login" aria-describedby="emailHelp" placeholder="usuario@factorb.cl">
                </div>
                <div class="form-group mb-4">
                    <label for="password-login">Contraseña: </label>
                    <input type="password" class="form-control" id="password-login" placeholder="" class="pt-5 mt-2">
                </div>
                <div class="row mx-0">
                    <div class="btn btn-outline-danger btn-block text-center" onclick="acceso_plataforma()" id="submit">
                        <div id="name_button">Acceder</div>
                    </div>
                </div>
                <div class="form-group text-center mt-3">
                    <a class="text-center">¿Olvido su contraseña?</a>
                </div>
                <!--<div class="spinner-border text-danger" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>-->
                

            </form>
        </div>
        <div class="background-login__contenido__developer text-light text-center">
            © Copyright 2021 <a href="https://factorb.cl" class="text-info" >Factor B Ing. Eléctrica y Automatización</a>
        </div>
    </div>
</div>
<script src="/axios/axios.min.js"></script>

<script>
    function new_data(){ 
        let data = new Snackbar({
            message: "Message Here"
        });
    };
    function acceso_plataforma(){
        let username = document.getElementById('email-login').value;
        let password = document.getElementById('password-login').value;

        console.log(username, password);

        axios.post('http://127.0.0.1:3000/login', {
            username,
            password
        }).then((data)=>{
          console.log("respuesta del servidor", data);
          window.location.href = "http://127.0.0.1:3000/dashboard";
          
        }).catch((err) =>{
          console.log("error de respuesta", err);
          notification("error", "usuario incorrecto");
        });
    };
</script>
