<style>

    html, body {
        min-width: 100vw;
        min-height: 100vh;
        font-family: 'Roboto', sans-serif;
    }

    .background-login {
        background-image: url("/images/logo.jpg");
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        width: 100vw;
        height: 100vh;
    }

    .background-login__contenido {
        min-width: 100vw;
        min-height: 100vh;
        display: grid;
        grid-template-columns: auto;
        grid-template-rows: auto 70px;
    }

    .background-login__contenido__form {
        background-color: rgba(0,0,0,0.5);
        border: 1px solid rgba(255, 77, 14, 0.5);
        border-radius: 12px;
        grid-column: 1;
        grid-row: 1;
        justify-self: center;
        align-self: center;
        padding: 3em;
    }

    @media (max-width: 768px) {
        .background-login__contenido__form {
            padding-left: 2em;
            padding-right: 2em;
        }
    }

    

    .background-login__contenido__developer {
        grid-column: 1;
        grid-row: 2;
        justify-self: center;
        align-self: center;
        
