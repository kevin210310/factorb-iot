var app = require('../app');
var debug = require('debug')('factorb-iot:server');
var http = require('http');
const SocketIO = require('socket.io');
const moment = require('moment');
const { PubSub } = require(`@google-cloud/pubsub`);
const formatMessage = require('../utils/messages');
const { userJoin, getCurrentUser, userLeave, getRoomUsers } = require('../utils/users');

const projectId = 'lukas-lok';
const stateSubscriber = 'factorb-iot-data';

var pubsub = new PubSub({
    projectId: projectId,
});

var subscription = pubsub.subscription('projects/' + projectId + '/subscriptions/' + stateSubscriber);

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

console.log("servidor corriendo en el puerto", port);

var server = http.createServer(app);

const io = SocketIO(server);
const botName = 'Server_factorbiot';

io.on('connection', socket => {

    //conexion a la sala "factorbiot_data"
    socket.on('joinRoom', ({ username, rol, room }) => {

        console.log("se conecto: ", username, rol, room, "a las: ");
        //pool.query('INSERT INTO tiempos_usuarios SET nombre=?, f_in=?, f_out=?', [username, "2", "4"]);

        const user = userJoin(socket.id, username, rol, room);

        socket.join(user.room);

        // Send users and room info
        io.to(user.room).emit('roomUsers', {
            room: user.room,
            users: getRoomUsers(user.room)
        });
    });

    //mensajes entre la sala
    socket.on('chatMessage', msg => {
        const user = getCurrentUser(socket.id);
        io.to(user.room).emit('message', formatMessage(user.username, msg));
        console.log("actualizo su estado: ",user.username);
    });

    // desconexion de algun usuario..
    socket.on('disconnect', () => {
    
        const user = userLeave(socket.id);
        
        if (user) {
            
            io.to(user.room).emit(
                'message',
                formatMessage(botName, `${user.username} has left the chat`)
            );
            
            console.log("se desconecto: ", user.username, "a las: ");

            // Send users and room info
            io.to(user.room).emit('roomUsers', {
                room: user.room,
                users: getRoomUsers(user.room)
            });
        }
    });
    var messageHandler = function(message) {
        console.log(moment().format('DD/MM/YYYY hh:mm:ss'));
        console.log(moment().unix());
        message.ack();
        if(message.attributes.subFolder !== "events"){
            let data = Buffer.from(message.data, 'base64').toString('ascii');+

            console.log(data);

        }
        else {
          console.log("dispositivo conectado ==> ", message.attributes.deviceId);
        }
    };
    subscription.on('message', messageHandler);
    var a = 0;
    setInterval(() => {
      io.emit('test', {msg: 'data', value: a});
      a = a + 1;
    }, 5000);
});


server.listen(port);
server.on('error', onError);
server.on('listening', onListening);
function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
